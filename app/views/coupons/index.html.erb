<h1>Listing coupons</h1>

<table>
  <tr>
    <th>Token</th>
    <th>Usage limit</th>
    <th>Enabled</th>
    <th>Disabled message</th>
    <th>Discount</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @coupons.each do |coupon| %>
  <tr>
    <td><%= coupon.token %></td>
    <td><%= coupon.usage_limit %></td>
    <td><%= coupon.enabled %></td>
    <td><%= coupon.disabled_message %></td>
    <td><%= coupon.discount_id %></td>
    <td><%= link_to 'Show', coupon %></td>
    <td><%= link_to 'Edit', edit_coupon_path(coupon) %></td>
    <td><%= link_to 'Destroy', coupon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

