<h1>Listing products</h1>

<table>
  <tr>
    <th>Sku</th>
    <th>Category</th>
    <th>Price usd</th>
    <th>Taxable</th>
    <th>Shipping cost usd</th>
    <th>Qty on hand</th>
    <th>Qty ordered</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.sku %></td>
    <td><%= product.category %></td>
    <td><%= product.price_usd %></td>
    <td><%= product.taxable %></td>
    <td><%= product.shipping_cost_usd %></td>
    <td><%= product.qty_on_hand %></td>
    <td><%= product.qty_ordered %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

